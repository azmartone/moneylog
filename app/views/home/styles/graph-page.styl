@import 'nib'

.transactions-container
  .axis
    path, line
      fill none
      stroke #20496c
      shape-rendering crispEdges
    text
      font-family sans-serif
      font-size 11px

  text
    fill #20496c
    font-family "Arial"
    text-transform uppercase
    letter-spacing 0px
    font-size 11px

  .chart 
    rect
      stroke rgba(0,0,0,0)
      fill #f5f5f5
    .bar
      stroke rgba(0,0,0,0)
      fill #315B7E

  .perk-label
    font-family "Arial"
    text-transform uppercase
    letter-spacing 0px
    text-align center
    font-size 10px
    color #20496c
    .icon
      font-size 14px